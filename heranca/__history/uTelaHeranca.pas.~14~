uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ComCtrls, Data.DB, Vcl.Grids,
  Vcl.DBGrids, Vcl.ExtCtrls, Vcl.StdCtrls, FireDAC.Stan.Intf,
  FireDAC.Stan.Option, FireDAC.Stan.Param, FireDAC.Stan.Error, FireDAC.DatS,
  FireDAC.Phys.Intf, FireDAC.DApt.Intf, FireDAC.Stan.Async, FireDAC.DApt,
  FireDAC.Comp.DataSet, FireDAC.Comp.Client, udmConexao;

type
  TfrmTelaHeranca = class(TForm)
    pgControle: TPageControl;
    tbAcesso: TTabSheet;
    tbCadastro: TTabSheet;
    pnAcesso: TPanel;
    DBGrid1: TDBGrid;
    pnBotoes: TPanel;
    pnCadastro: TPanel;
    qryListagem: TFDQuery;
    dstListagem: TDataSource;
  private
    { Private declarations }
  public
    { Public declarations }
  end;

procedure LimparCampos(Container: TWinControl);

var
  frmTelaHeranca: TfrmTelaHeranca;

implementation

{$R *.dfm}

procedure LimparCampos(Container: TWinControl);
var
  i: Integer;
begin
  for i := 0 to Container.ControlCount - 1 do
  begin
    if Container.Controls[i] is TEdit then
      TEdit(Container.Controls[i]).Clear
    else if Container.Controls[i] is TComboBox then
      TComboBox(Container.Controls[i]).ItemIndex := -1
    else if Container.Controls[i] is TCheckBox then
      TCheckBox(Container.Controls[i]).Checked := False
    else if Container.Controls[i] is TWinControl then
      LimparCampos(TWinControl(Container.Controls[i]));
  end;
end;

end.
